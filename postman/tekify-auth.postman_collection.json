{
  "info": {
    "name": "Tekify Auth API",
    "description": "Postman collection for Tekify authentication workflows (register, login, 2FA, sessions, account management). All requests are scoped under `{{base_url}}/api/v1/auth`. Set `{{base_url}}` to your backend host (e.g., http://localhost:5000).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:5000" },
    { "key": "access_token", "value": "" },
    { "key": "refresh_token", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"StrongP@ssw0rd!\",\n  \"name\": \"Jane Doe\",\n  \"phone\": \"+254700000000\",\n  \"acceptTerms\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"StrongP@ssw0rd!\",\n  \"rememberMe\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "login"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/refresh-token",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "refresh-token"]
            }
          }
        },
        {
          "name": "Forgot Password",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/forgot-password",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "forgot-password"]
            }
          }
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"password\": \"NewStrongP@ss1!\",\n  \"confirmPassword\": \"NewStrongP@ss1!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/reset-password/:token",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "reset-password", ":token"]
            }
          },
          "response": []
        },
        {
          "name": "Verify Email",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/v1/auth/verify-email/:token",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "verify-email", ":token"]
            }
          }
        },
        {
          "name": "Resend Verification Email",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/resend-verification",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "resend-verification"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/auth/logout",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "logout"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/auth/profile",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "profile"]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Jane Updated\",\n  \"phone\": \"+254711111111\",\n  \"avatar\": \"https://cdn.example.com/avatars/jane.png\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/profile",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "profile"]
            }
          }
        },
        {
          "name": "Change Password",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"StrongP@ssw0rd!\",\n  \"newPassword\": \"NewStrongP@ss1!\",\n  \"confirmPassword\": \"NewStrongP@ss1!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/change-password",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "change-password"]
            }
          }
        },
        {
          "name": "Setup Two-Factor",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/auth/two-factor/setup",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "two-factor", "setup"]
            }
          }
        },
        {
          "name": "Verify Two-Factor",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "body": { "mode": "raw", "raw": "{\n  \"code\": \"123456\"\n}" },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/two-factor/verify",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "two-factor", "verify"]
            }
          }
        },
        {
          "name": "Disable Two-Factor",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"StrongP@ssw0rd!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/two-factor/disable",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "two-factor", "disable"]
            }
          }
        },
        {
          "name": "List Sessions",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/auth/sessions",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "sessions"]
            }
          }
        },
        {
          "name": "Revoke Session",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/auth/sessions/:sessionId",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "sessions", ":sessionId"]
            }
          }
        },
        {
          "name": "Revoke All Sessions",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/auth/sessions",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "sessions"]
            }
          }
        },
        {
          "name": "Delete Account",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{access_token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"password\": \"StrongP@ssw0rd!\",\n  \"reason\": \"No longer needed\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/account",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "account"]
            }
          }
        }
      ]
    }
  ]
}
